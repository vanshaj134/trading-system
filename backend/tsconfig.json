{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
  "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "tests/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist"]
}