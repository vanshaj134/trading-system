generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  name       String?
  createdAt  DateTime    @default(now())
  portfolios Portfolio[]
  trades     Trade[]
  signals    Signal[]
}

model Portfolio {
  id        String   @id @default(cuid())
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  trades    Trade[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trade {
  id            String    @id @default(cuid())
  symbol        String
  action        String
  quantity      Float
  price         Float
  status        String
  executionTime DateTime?
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id])
  portfolioId   String
  user          User?     @relation(fields: [userId], references: [id])
  userId        String?
  signal        Signal?   @relation(fields: [signalId], references: [id])
  signalId      String?
  createdAt     DateTime  @default(now())
}

model Signal {
  id         String   @id @default(cuid())
  symbol     String
  confidence Float
  action     String
  source     String?
  score      Float?
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  createdAt  DateTime @default(now())
  trades     Trade[]
}

model SystemLog {
  id        String   @id @default(cuid())
  level     String
  message   String
  context   String?
  createdAt DateTime @default(now())
}
